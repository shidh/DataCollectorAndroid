<resources>

    <!-- Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>
    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.
        <item name="colorPrimary">#2196F3</item>
        -->
        <item name="ratingBarStyle">?android:attr/ratingBarStyleIndicator</item>
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">#E91E63</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="sv_backgroundColor">#2196F3</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="AppTheme.WithoutActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkActionBar" parent="android:Theme.Holo.Light.DarkActionBar"></style>
    <style name="LightBar" parent="android:Theme.Holo.Light"/>
    <style name="Light" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="LightBarAppCompat" parent="MaterialDrawerTheme.ActionBar.TranslucentStatus"/>

    <style name="LightBarAppCompat1" parent="MaterialDrawerTheme.Light.ActionBar"/>
    <style name="LightBarAppCompat2" parent="MaterialDrawerTheme.Light.ActionBar.TranslucentStatus"/>
    <style name="LightBarAppCompat3" parent="MaterialDrawerTheme.Light.DarkToolbar"/>
    <style name="LightBarAppCompat4" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus"/>
    <style name="LightBarAppCompat5" parent="MaterialDrawerTheme.Light.DarkToolbar.ActionBar"/>
    <style name="LightBarAppCompat6" parent="MaterialDrawerTheme.Light.DarkToolbar.ActionBar.TranslucentStatus"/>

    <style name="StarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/btn_star_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/btn_star_holo_light</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:maxHeight">65dp</item>
    </style>

    <style name="Holo.Light.RatingBar.Indicator" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_holo_light</item>
        <item name="android:thumb">@null</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:maxHeight">65dp</item>
    </style>


    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#3300A621</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomShowcaseTheme3" parent="ShowcaseView">
        <item name="sv_backgroundColor">#330066FF</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#00801A</item>
    </style>


</resources>
